public class Coche {
    private int numPuertas;
    
    public Coche() {
        numPuertas = 0;
    }
    
    public void incrementarPuertas() {
        numPuertas = numPuertas + 1;
    }
    
    public int obtenerNumPuertas() {
        return numPuertas;
    }
    
    public static void main(String[] args) {
        Coche miCoche = new Coche();
        miCoche.incrementarPuertas();
        
        int numPuertas = miCoche.obtenerNumPuertas();
        System.out.println("El coche tiene " + numPuertas + " puerta(s).");
    }
}

