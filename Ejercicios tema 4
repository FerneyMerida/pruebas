    public static void main(String[] args) {

        //Ejercicio if = si, else if = entonces.
        int numeroIF = 5;

        if (numeroIF > 0) {
            System.out.println("el número es positivo");
        } else if (numeroIF < 0) {
            System.out.println("Este numero es negativo");
        } else {
            System.out.println("el resultado es 0");
        }
        //Ejercicio While = Mientras//

        int numeroWhile = -10;
        while (numeroWhile < 3){
            System.out.println(numeroWhile);
            numeroWhile = numeroWhile +2;

        }
        // Ejercicio Do = Haz mientras //

        int numeroDo = -10;
         do{
             System.out.println(numeroDo);
             numeroDo = numeroDo +2;
         } while (numeroDo > 3);

        // Ejercicio de Bucles for//
        for (int numeroFor = 0; numeroFor <= 3; numeroFor = numeroFor +1 ){
            System.out.println(numeroFor);
        }
        // Ejercicio Switch
        var estacion = "INVIERNO";

        switch(estacion){

            case "PRIMAVERA":
            System.out.println("es primavera");

            case "VERANO":
                System.out.println("es verano");
            case "INVIERNO":
                System.out.println("es invierno");
                break;
            case "Otoño":
                System.out.println("es otoño");

        }


    }

